{
  "manifest_version": 2,
  "name": "Clear Clutter",
  "version": "0.1",
  "update_url": "https://amitasviper.com/assets/update.xml",

  "content_scripts": [
    {
     "matches": [
       "<all_urls>"
     ],
     "js": ["js/jquery-2.2.4.min.js", "toggle.js"],
     "css": [ "main.css" ]
    }
   ],

  "background":{
            "scripts":["background.js"]
          },
  "browser_action": {
     "default_icon": "assets/icon.png"
   },

  "permissions": [
      "storage",
      "tabs",
      "notifications",
      "http://*/",
      "https://*/"
   ]
}